manifest {
    homePage = 'http://github.com/cbcrg/dpa-analysis'
    description = 'Double Progressive Alignment Analysis'
    mainScript = 'main.nf'
}

process {
    //container = 'cbcrg/tcoffee-dpa@sha256:04d5bc286d6c9b168841bc413ec7e8d97aac5422deefd534a2f0922d12d717ee'
    container = 'docker://cbcrg/tcoffee-dpa@sha256:04d5bc286d6c9b168841bc413ec7e8d97aac5422deefd534a2f0922d12d717ee'
} 

//
// Profile Configuration - These setting are location/harware specific and
//                         should not have any effect on the results

profiles {
    crg { includeConfig 'configs/loc_crg.config' }
}

env {
    CACHE_4_TCOFFEE='/tmp'
    LOCKDIR_4_TCOFFEE='/tmp'
    TMP_4_TCOFFEE='/tmp'
}

