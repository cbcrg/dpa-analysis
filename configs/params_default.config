params { 

    // Name
    name = "DPA_Analysis"

    // input sequences to align [FASTA]
    seqs = "$baseDir/tutorial/seqs/*.fa"

    // input reference sequences aligned [Aligned FASTA]
    refs = "$baseDir/tutorial/refs/*.ref"

    // input guide tree(s) [NEWICK]
    //trees = "$baseDir/tutorial/trees/*.dnd"
    trees = NULL

    // output directory [DIRECTORY]
    output = "$baseDir/results"

    // alignment method [CLUSTALO | MAFFT | UPP]
    align_method = "CLUSTALO"

    // tree method [CLUSTALO | MAFFT | RANDOM]
    tree_method = "CLUSTALO"

    // create dpa alignments [BOOL]
    dpa_align = true

    // use standard alingments [BOOL] 
    std_align = true

    // bucket sizes for DPA [LIST]
    buckets = [50,100,200,500]

}


process {
    container = 'cbcrg/tcoffee-dpa@sha256:a18a09e94ee103e198341f228747fd69cae256989d32f9167aced466c0bb2cda'
} 
